{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/tests/*": [
        "./tests/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src",
    "tests"
  ]
}